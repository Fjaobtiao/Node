<%- include("../partials/header") %>
<div class="container">
    <div class="row">
      <div class="col">
        <h1 class="mt-5">Editar Produtos</h1>
        <form class="mt-4" action="/produtos/editarProdutos" method="POST">
          <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" class="form-control" id="nome" name="nome"  placeholder="Nome do produto" value="<%= resultado.nome %>">
          </div>
          <div class="form-group">
            <label for="valor">Valor Unitário</label>
            <input type="Number"  class="form-control" id="valor" name="valor"  placeholder="0,00" value="<%= resultado.vlUnit %>">
          </div>
          <div class="form-group">
            <label for="codbarras">Código de Barras</label>
            <input type="Number"  class="form-control" id="codBarras" name="codBarras"  placeholder="000000000" value="<%= resultado.codigoBarras %>">
          </div>
          <input type="hidden" name="id" value="<%= resultado._id %>">
          <button type="submit" class="btn btn-primary">Enviar</button>
        </form>    
      </div>
    </div>
  </div>
  <%- include("../partials/footer") %>
  
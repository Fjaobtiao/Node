<%- include("../partials/header") %>
<div class="container">
    <div class="row">
      <div class="col">
        <h1 class="mt-5">Editar Alunos</h1>
        <form class="mt-4" action="/alunos/editarAlunos" method="POST">
          <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" class="form-control" id="nome" name="nome"  placeholder="Nome do Aluno" value="<%= resultado.nome %>">
          </div>
          <div class="form-group">
            <label for="matricula">Matrícula</label>
            <input type="text" class="form-control" id="matricula" name="matricula"  placeholder="Matrícula" value="<%= resultado.matricula %>">
          </div>
          <div class="form-group">
            <label for="idade">Idade</label>
            <input type="text" class="form-control" id="idade" name="idade"  placeholder="Idade" value="<%= resultado.idade %>">
          </div>
          <div class="form-group">
            <label for="classe">Classe</label>
            <input type="text" class="form-control" id="classe" name="classe"  placeholder="Classe" value="<%= resultado.classe %>">
          </div>
          <div class="form-group">
            <label for="responsavel">Responsável</label>
            <input type="text" class="form-control" id="responsavel" name="responsavel"  placeholder="Responsável" value="<%= resultado.responsavel %>">
          </div>
          <div class="form-group">
            <label for="tel_contato">Telefone de Contato</label>
            <input type="text" class="form-control" id="tel_contato" name="tel_contato"  placeholder="Telefone de Contato" value="<%= resultado.tel_contato %>">
          </div>


          <input type="hidden" name="id" value="<%= resultado._id %>">
          <button type="submit" class="btn btn-primary">Enviar</button>
        </form>    
      </div>
    </div>
  </div>
  <%- include("../partials/footer") %>
  